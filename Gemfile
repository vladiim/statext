source 'https://rubygems.org'

# Server
gem 'foreman', group: :development
gem 'puma'

# Project
gem 'rake'
gem 'httparty'

# Google
gem 'google-api-client'
gem 'googleauth'
gem 'omniauth-oauth2', '~> 1.3.1'
gem 'omniauth-google-oauth2'

# Data store
gem 'redis'

# Component
gem 'sass'
gem 'haml'
gem 'pg'
gem 'sequel'

# Test
group :test do
  gem 'rspec'
  gem 'rack-test'
  gem 'guard-rspec', require: false
end

# Test & development

group :test, :development do
  gem 'byebug'
  gem 'dotenv'
end

# Padrino Stable Gem
gem 'padrino', '0.13.1'
