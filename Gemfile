source 'https://rubygems.org'

# Padrino supports Ruby version 1.9 and later
# ruby '2.1.2'

# Distribute your app as a gem
# gemspec

# Server requirements
gem 'foreman', group: :development
gem 'puma'

# Optional JSON codec (faster performance)
# gem 'oj'

# Project requirements
gem 'rake'
gem 'httparty'

# Google
gem 'google-api-client'
gem 'googleauth'

# Data store
gem 'redis'


# Component requirements
gem 'sass'
gem 'haml'
gem 'pg'
gem 'sequel'

# Test requirements
group :test do
  gem 'rspec'
  gem 'rack-test'
end

# Padrino Stable Gem
gem 'padrino', '0.13.1'

